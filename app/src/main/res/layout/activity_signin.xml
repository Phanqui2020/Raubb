<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cofeas.dev.raubb.Activity.Signin" android:orientation="vertical"
    android:background="@drawable/login">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:layout_gravity="center"
            android:textSize="30dp"/>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số điện thoại"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp" />

        <EditText
            android:hint="Nhập số điện thoại"
            android:textColorHint="@color/colorPrimaryDark"
            android:id="@+id/edtsodienthoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="phone"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Mật khẩu"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtmatkhau"
            android:hint="Nhập mật khẩu"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/cardview_light_background" />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btndnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Đăng Nhập"/>
        <Button
            android:id="@+id/btnmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18dp"
            android:text="Trở về"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtdky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nếu chưa có tài khoản, nhấn vào đây để đăng ký"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20dp" />

</LinearLayout>

