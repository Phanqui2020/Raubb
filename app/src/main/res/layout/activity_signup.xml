        <!--android:id="@+id/txtmsg"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:text="msg"-->
        <!--android:textColor="@android:color/holo_red_dark"-->
        <!--android:textSize="20dp" />-->

</LinearLayout>
